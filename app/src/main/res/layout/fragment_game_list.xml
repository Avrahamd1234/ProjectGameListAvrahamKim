<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragmentsGamesList.GameListFragment" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/fragmentGameListEditTextSearchBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:ems="10"
            android:hint="Search Here"
            android:inputType="text" />

        <ImageButton
            android:id="@+id/fragmentGameListSearchButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:src="@drawable/searchicon"
            android:contentDescription="Click Here to Search"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/gameListFragmentUserTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hello" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fragmentGameListRecycleView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>